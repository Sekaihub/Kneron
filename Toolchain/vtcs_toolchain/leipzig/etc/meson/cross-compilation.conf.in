# Note: Buildroot's and Meson's terminologies differ about the meaning
# of 'build', 'host' and 'target':
# - Buildroot's 'host' is Meson's 'build'
# - Buildroot's 'target' is Meson's 'host'

[binaries]
c = '/opt/vtcs_toolchain/leipzig//bin/aarch64-buildroot-linux-gnu-gcc'
cpp = '/opt/vtcs_toolchain/leipzig//bin/aarch64-buildroot-linux-gnu-g++'
ar = '/opt/vtcs_toolchain/leipzig//bin/aarch64-buildroot-linux-gnu-gcc-ar'
strip = '/opt/vtcs_toolchain/leipzig//bin/aarch64-buildroot-linux-gnu-strip'
cmake = '/snap/bin/cmake'
fortran = '/bin/false'
pkgconfig = '/opt/vtcs_toolchain/leipzig//bin/pkgconf'
g-ir-compiler = '/opt/vtcs_toolchain/leipzig//aarch64-buildroot-linux-gnu/sysroot/usr/bin/g-ir-compiler'
g-ir-scanner = '/opt/vtcs_toolchain/leipzig//aarch64-buildroot-linux-gnu/sysroot/usr/bin/g-ir-scanner'

[built-in options]
c_args = ['-D_LARGEFILE_SOURCE', '-D_LARGEFILE64_SOURCE', '-D_FILE_OFFSET_BITS=64', '-Os', '-g0', '-D_FORTIFY_SOURCE=1'@PKG_TARGET_CFLAGS@]
c_link_args = [@PKG_TARGET_LDFLAGS@]
cpp_args = ['-D_LARGEFILE_SOURCE', '-D_LARGEFILE64_SOURCE', '-D_FILE_OFFSET_BITS=64', '-Os', '-g0', '-D_FORTIFY_SOURCE=1'@PKG_TARGET_CXXFLAGS@]
cpp_link_args = [@PKG_TARGET_LDFLAGS@]
fortran_args = ['-Os', '-g0'@PKG_TARGET_FCFLAGS@]
fortran_link_args = [@PKG_TARGET_LDFLAGS@]
wrap_mode = 'nodownload'
cmake_prefix_path = '/opt/vtcs_toolchain/leipzig//aarch64-buildroot-linux-gnu/sysroot/usr/lib/cmake'

[properties]
needs_exe_wrapper = true
sys_root = '/opt/vtcs_toolchain/leipzig//aarch64-buildroot-linux-gnu/sysroot'
pkg_config_libdir = '/opt/vtcs_toolchain/leipzig//aarch64-buildroot-linux-gnu/sysroot/usr/lib/pkgconfig:/opt/vtcs_toolchain/leipzig//aarch64-buildroot-linux-gnu/sysroot/usr/share/pkgconfig'
pkg_config_static = 'false'
# enable meson build to pass a toolchain file to cmake
cmake_toolchain_file = '/opt/vtcs_toolchain/leipzig//share/buildroot/toolchainfile.cmake'
cmake_defaults = false

[host_machine]
system = 'linux'
cpu_family = 'aarch64'
cpu = 'cortex-a55'
endian = 'little'
